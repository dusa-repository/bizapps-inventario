<zk>
	<style src="/public/Estilo.css" />
	<div apply="controlador.seguridad.CEditarUsuario" id="divEditarUsuario">
		<groupbox width="52%" mold="3d" title="Editar Usuario">
			<grid width="100%">
				<columns visible="false">
					<column label="" width="35%" />
					<column label="" width="65%" />
				</columns>
				<rows>
					<row>
						<hbox>
							<label value="Nombre de Usuario:" class="etiqueta" />
							<space />
							<label value="*" style="font-weight:bold;color:red" />
						</hbox>
						<textbox id="txtNombreUsuarioEditar" maxlength="50"
							disabled="true" />
					</row>
					<row>
						<hbox>
							<label value="Contrase単a nueva:" class="etiqueta" />
							<space />
							<label value="*" style="font-weight:bold;color:red" />
						</hbox>
						<textbox id="txtClaveUsuarioNueva" type="password"
							maxlength="256" width="250px" tabindex="8"
							tooltiptext="Ingrese una Nueva Contrase単a (password)" />
					</row>
					<row>
						<hbox>
							<label value="
							Confirme su contrase単a: " class="etiqueta" />
							<space />
							<label value="*" style="font-weight:bold;color:red" />
						</hbox>
						<textbox id="txtClaveUsuarioConfirmar" type="password"
							maxlength="256" width="250px" tabindex="8" tooltiptext="Confirme su Contrase単a (password)" />
					</row>
					<row>
						<label class="etiqueta" value="Adjuntar Imagen:" />
						<fileupload
							style="	background: #952C2C;font-size: 11px;color: white;cursor: pointer;width: 95px;height: 29px;	-webkit-border-radius: 0.7em;-moz-border-radius: 0.7em;	border-radius: 0.7em;"
							id="fudImagenUsuario" image="/public/imagenes/botones/cargar.png"
							label="Foto" />
					</row>
					<row>
						<label class="etiqueta" value="Imagen Seleccionada:" />
						<image id="imgUsuario" width="50px" height="50px" />
					</row>
				</rows>
			</grid>
			<separator />
			<div id="botoneraEditarUsuario" />
		</groupbox>
	</div>
</zk>